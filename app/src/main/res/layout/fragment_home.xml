<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment"
    android:background="@color/pink_50">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_playing"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/female"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="53dp"
                    android:layout_toEndOf="@+id/image_playing"
                    android:text="Chào Phương"
                    android:textColor="@color/blue_400"
                    android:textSize="@dimen/lable_3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="24dp"
                    android:text="Tuần thai"
                    android:textColor="@color/blue_400"
                    android:textSize="@dimen/lable_4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tuanThai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_toEndOf="@+id/textView9"
                    android:text="3"
                    android:textColor="@color/blue_400"
                    android:textSize="@dimen/lable_4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="4dp"
                    android:text="Mẹ và bé thay đổi như nào"
                    android:textColor="@color/grey_200"
                    android:textSize="@dimen/lable_5" />


                <View
                    android:id="@+id/view3"
                    android:layout_width="340dp"
                    android:layout_height="278dp"
                    android:layout_below="@+id/textView10"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="131dp"
                    android:layout_marginEnd="36dp"
                    android:background="@drawable/view" />

                <ImageView
                    android:id="@+id/hinhAnhBe"
                    android:layout_width="159dp"
                    android:layout_height="169dp"
                    android:layout_alignTop="@+id/view3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="38dp"
                    android:src="@drawable/baby" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/view3"
                    android:layout_alignTop="@+id/view3"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="88dp"

                    android:layout_toStartOf="@+id/hinhAnhBe"
                    android:text="Bé"
                    android:textColor="@color/blue_400"
                    android:textSize="@dimen/lable_3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TenBe"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView13"
                    android:layout_alignStart="@+id/view3"
                    android:layout_alignEnd="@+id/view3"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginEnd="182dp"
                    android:text="Dưa Hấu"
                    android:textColor="@color/blue_400"
                    android:textSize="@dimen/lable_3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/moTaBe"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TenBe"
                    android:layout_alignStart="@+id/view3"
                    android:layout_alignEnd="@+id/view3"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="135dp"
                    android:text="Bé có kích thước như trái bắp"
                    android:textColor="@color/grey_300"
                    android:textSize="@dimen/lable_6" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="3dp"
                    android:layout_height="68dp"
                    android:layout_below="@+id/moTaBe"
                    android:layout_alignStart="@+id/view3"
                    android:layout_alignBottom="@+id/view3"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="23dp"
                    android:background="@color/orange_300" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/view3"
                    android:layout_alignBottom="@+id/view3"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="206dp"
                    android:layout_marginBottom="65dp"
                    android:layout_toEndOf="@+id/view4"
                    android:text="Chiều dài"
                    android:textColor="@color/blue_400"
                    android:textSize="@dimen/lable_6"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chieuDaiBe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/view3"
                    android:layout_alignBottom="@+id/view3"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="194dp"
                    android:layout_marginBottom="27dp"
                    android:layout_toEndOf="@+id/view4"
                    android:text="17 cm"
                    android:textColor="@color/blue_400"
                    android:textSize="@dimen/lable_3"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="3dp"
                    android:layout_height="68dp"
                    android:layout_below="@+id/moTaBe"
                    android:layout_alignEnd="@+id/view3"
                    android:layout_alignBottom="@+id/view3"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="143dp"
                    android:layout_marginBottom="23dp"
                    android:background="@color/orange_300" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/view3"
                    android:layout_alignBottom="@+id/view3"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="64dp"
                    android:text="Cân nặng"
                    android:textColor="@color/blue_400"
                    android:textSize="@dimen/lable_6"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/soKyBe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/view3"
                    android:layout_alignBottom="@+id/view3"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="28dp"
                    android:text="0.6 -0.7 kg"
                    android:textColor="@color/blue_400"
                    android:textSize="@dimen/lable_3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view3"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="151dp"
                    android:text="Lịch khám trong tuần"
                    android:textColor="@color/blue_400"
                    android:textSize="@dimen/lable_4"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="249dp"
                    android:layout_below="@+id/textView20"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="-29dp"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/lich" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTuanThai"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="178dp" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>